pipeline {
    agent any
    environment {
        PROJECT_NAME = 'collection'
        PROJECT_PATH = ""
        APP_KUBE_CONTEXT = "default"
        APP_RELATIVE_PATH = "./projects/collectionapi/dev"
        APP_CREATE_CONFIGMAP_SCRIPT = "$APP_RELATIVE_PATH/create-configmap.sh"
        APP_REFRESH_PODS_TIMEOUT = 10
    }
    stages {
        stage('Load Reusable Stages') {
            steps {
                script {
                    stages = load './deploy/scripts/groovy/updatePropertiesStages.groovy'
                }
            }
        }
        stage('Update configmap') {

            steps {
                script {
                    stages.updateConfigmapStage()
                    
                }
            }
        }
        stage('Wait') {
            steps {
                script {
                    stages.waitStage()
                }
            }
        }
        stage('Refresh pods') {
            steps {
                script {
                    stages.refreshPodsStage()
                }
            }
        }
    }
    post {
        success {
            echo 'Update properties completed successfully!'
        }
        failure {
            echo 'Update properties failed!'
        }
    }
}